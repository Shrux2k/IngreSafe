<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:weightSum="4"
        android:background="@color/black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="81dp"

                android:layout_marginTop="80dp"
                android:src="@drawable/ingrescan_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:elevation="36dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"

            android:background="@drawable/card_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:gravity="center"
                android:layout_marginLeft="65dp"
                android:text="Welcome back,\nLogin to start scanning"
                android:layout_marginTop="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <EditText
                    android:textColorHint="#AFADAC"
                    android:id="@+id/emailEditText"
                    android:drawableEnd="@drawable/baseline_person_24"
                    android:drawableTint="@color/white"
                    android:hint="someone@gmail.com"
                    android:textColor="@color/white"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"/>
                <EditText
                    android:textColorHint="#AFADAC"
                    android:id="@+id/passwordEditText"
                    android:layout_marginTop="24dp"
                    android:drawableEnd="@drawable/baseline_lock_24"
                    android:drawableTint="@color/white"
                    android:hint="Password"
                    android:textColor="@color/white"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"/>

                <CheckBox
                    android:buttonTint="@color/white"
                    android:id="@+id/rememberMeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="18dp"
                    android:text="Remember me"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp">

                    <Button
                        android:layout_width="0dp"
                        android:id="@+id/loginButton"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Sign In"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:backgroundTint="#4fcba3"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="26dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="500dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Don't have an account?"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/signupTextView"
                    android:layout_height="wrap_content"
                    android:textColor="#4fcba3"
                    android:textSize="18dp"
                    android:text="Register instead"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>