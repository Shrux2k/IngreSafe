<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1C1C1E">

        <!-- First Half with Green Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="#4A84A8"
            android:orientation="vertical"
            android:id="@+id/firstHalfLayout">

            <TextView
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="ðŸŒŽ\nEnvironment"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Care for the earth by avoiding products that are bad for the environment"
                android:textColor="@color/white"/>


            <!-- Content for the first half -->
            <!-- You can add any views or content here -->

        </LinearLayout>

        <!-- Second Half with Switches -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:layout_below="@id/firstHalfLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="472dp"
                android:orientation="vertical"
                android:background="#1C1C1E">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2C2C2E"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Text for Celery -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥¤ Microplastics "
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <Switch
                            android:id="@+id/switchMicroplastics"
                            android:layout_width="59dp"
                            android:layout_height="43dp"
                            android:layout_gravity="end" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2C2C2E"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Text for Chicken Egg -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ´ Palm Oil "
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Switch for Chicken Egg -->
                        <Switch
                            android:id="@+id/switchPalmOil"
                            android:layout_width="59dp"
                            android:layout_height="43dp"
                            android:layout_gravity="end" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/SCformEnv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2C2C2E"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Text for Chicken Egg -->
                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Suggest Categories"
                            android:layout_gravity="center_vertical"
                            android:textColor="#DEA552"
                            android:textSize="18sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>
