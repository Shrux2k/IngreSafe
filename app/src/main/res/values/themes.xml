<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IngredientParser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <!-- Customize your theme here. -->
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>



    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size as needed -->
        <!-- You can add more styling attributes here -->
    </style>


    <style name="Theme.IngredientParser" parent="Base.Theme.IngredientParser" />

    <style name="DialogueAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="MyTransparentStatusBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="CardView.vegan" parent = "CardView">
        <item name = "android:foreground">@drawable/vegan_cardview</item>
    </style>

    <style name="CardView.allergy" parent = "CardView">
        <item name = "android:foreground">@drawable/allergy_cardview</item>
    </style>

    <style name="CardView.pregnant" parent = "CardView">
        <item name = "android:foreground">@drawable/pregnant_cardview</item>
    </style>

    <style name="CardView.custom" parent = "CardView">
        <item name = "android:foreground">@drawable/custom_cardview</item>
    </style>

    <style name="BlackSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">#2C2C2E</item> <!-- Black background -->
        <item name="android:editTextColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textColorHint">#FFFFFF</item> <!-- White text color -->

        <item name="android:colorControlNormal">#FFFFFF</item> <!-- White text color for suggestions and hint -->
        <item name="android:colorControlActivated">#FFFFFF</item> <!-- White text color for activated state -->
    </style>


    <style name="BlackRecyclerView">
        <item name="android:background">#2C2C2E</item> <!-- Black background -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- White text color -->
    </style>

    <!-- styles.xml -->




</resources>